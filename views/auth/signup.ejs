<%- include('../includes/head.ejs') %>
</head>

<body>

  <div class="container mb-3">
    <!-- Nav -->
    <!-- navigation.ejs -->
    <%- include('../includes/navigation.ejs') %>
    
    
    <!-- Main -->
    <main>
      <div class="row">
        <div class="col-8 m-auto p-3">
          <% if (errorMessage) { %>
            <h5 class="errorMessage font-weight-bold"> <%= errorMessage %> </h5>
          <% } %>
          <form action="/signup" method="POST">
            <div class="form-group">
              <label for="email">Email: </label>
              <input 
                type="text" 
                name="email" 
                class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>" 
                id="email" 
                value="<%= inputValues.email %>"
              >
            </div>
            <div class="form-group">
              <label for="password">Password: </label>
              <input 
                type="password" 
                class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>" 
                name="password" 
                id="password" 
                value="<%= inputValues.password %>"
              >
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password: </label>
                <input 
                  type="password" 
                  class="form-control <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>" 
                  name="confirmPassword" 
                  id="confirmPassword" 
                  value="<%= inputValues.confirmPassword %>"
                >
              </div>
            <div class="row mb-4">
              <div class="col text-center">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn btn-lg btn-outline-dark">Sign Up</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </main>
    

    <!-- Footer -->
    <%- include('../includes/footer.ejs') %>

  </div>
  <!--End of Container-->
  
  <!-- end.ejs -->
  <%- include('../includes/end.ejs') %>